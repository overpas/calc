<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GenericButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NumberButton" parent="GenericButton">
        <item name="android:background">@color/colorGreenish</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ControlButton" parent="GenericButton">
        <item name="android:background">@color/colorReddish</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MathButton" parent="GenericButton">
        <item name="android:background">@color/colorBlueish</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="HelperButton" parent="GenericButton">
        <item name="android:background">@color/colorPurplish</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ExpressionTextView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/colorYellowish</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
